pipeline {
    agent any

    environment {
        CLASSPATH = "classes;lib/;path/to/eclipse/plugins/junit-platform-console-standalone-1.7.1.jar"
    }

    stages {
        stage('Checkout') {
            steps {
                // 소스코드 체크아웃
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Windows 배치 파일 명령어를 사용하여 모든 Java 파일을 찾아 컴파일
                bat '''
                @echo off
                setlocal enabledelayedexpansion
                set SOURCES=
                for /r BookManager\\src %%f in (*.java) do (
                    set SOURCES=!SOURCES! %%f
                )
                javac -encoding UTF-8 -d classes !SOURCES!
                '''
            }
        }
        stage('Test') {
            steps {
                // JUnit 5 테스트 실행
                bat "java -cp %CLASSPATH% org.junit.platform.console.ConsoleLauncher --scan-classpath > test_results.txt"
            }
        }
    }
    post {
        always {
            // 테스트 결과 파일을 저장하기 위해 아카이브
            archiveArtifacts 'test_results.txt'
        }
        failure {
            echo 'Build or test failed'
        }
        success {
            echo 'Build and test succeeded'
        }
    }
}
